<div>
	<div class="container-fluid" ng-include="'templates/sessionbar.xml'"></div>
	<div class="animate-switch-container" ng-switch="view">
		<div class="animate-switch" ng-switch-when="graph">
			<div google-chart="google-chart" chart="chartObject" onReady="chartReady"
				style="height:400px; width:100%;" ng-controller="ChartController"></div>
		</div>
		<div class="animate-switch well" ng-switch-when="run">
    <div class="alert alert-info">Queue and execute a set of BenchX tasks
            </div>
        
			<button class="btn btn-primary  btn-sm  navbar-btn " ng-click="toggleMode()"
				title="Click to toggle mode: File or Database">{{state.mode}}</button>

			<button class="factor btn btn-primary  btn-sm navbar-btn"
				ng-click="xmlgen(0.5)" title="Click to set size">{{state.factor}}/{{state.size}}
			</button>
			<label>
				Repeat:
				<input class="input-sm" type="number" ng-mode="repeat" />
			</label>
			<button class="btn btn-primary" ng-click="executeAll()" title="Execute all queries">
				<i class="glyphicon glyphicon-forward"></i>
				Run All
			</button>
		</div>
		<div class="animate-switch well" ng-switch-when="save">
			<div class="alert alert-info">Save the current session timings on this webserver.
			</div>
			<form role="form">
				<div class="form-group">
					<label>Description</label>
					<textarea name="description" placeholder="About these results..."
						class="form-control"></textarea>
				</div>
				<button ng-click="save()" class="btn btn-primary">Save</button>
			</form>



		</div>
		<div class="animate-switch" ng-switch-default="ng-switch-default">
			<div class="row">
				<div class="col-md-1">Suite:

				</div>
				<div class="col-md-1">
					<select ng-model="suite" ng-options="s for s in suites"></select>
				</div>
				<div class="col-md-10">
					blah blah
				</div>
			</div>
			<div class="row" ng-repeat="query in session">
				<div class="col-md-1" title="{{query.src}}">{{query.name}}</div>
				<div class="col-md-1">
					<button class="btn" ng-click="execute($index)">Run</button>
				</div>
				<div class="col-md-10">
					<div ng-repeat="run in query.runs" class="runtime"
						title="{{run.created}} \n {{run.mode}}\n ">
						<span>{{run.mode}}{{run.factor}}</span>
						<span class="pull-right">{{run.runtime}}ms</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>