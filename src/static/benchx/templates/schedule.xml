<div ng-controller="ScheduleController">
	
	<form class="well">
	<div class="alert alert-info">Queue and execute a set of BenchX tasks
    </div>
	<div class="row">
		<label>Initial Mode:</label>
		<div class="btn-group">
			<label class="btn btn-success" ng-model="$storage.settings.mode" btn-radio="'F'"
				uncheckable="uncheckable">File</label>
			<label class="btn btn-success" ng-model="$storage.settings.mode" btn-radio="'D'"
				uncheckable="uncheckable">Database</label>
		</div>
		<label>
			Initial Factor:
			<input class="input-sm in8" type="number" ng-model="$storage.settings.factor" min="0"
				max="10" step="0.25" />
			
		</label>(Size: {{$storage.settings.factor | factorBytes | readablizeBytes}})
	</div>
	<div class="row">
	<label>
	Both modes: <input type="checkbox" ng-model="$storage.settings.allmodes"/>
	</label>
		<label>
			Factor incr:
			<input class="input-sm in8" type="number" ng-model="$storage.settings.incr" min="0"
				max="10" step=".05" />
		</label>
		<label>
			Factor max:
			<input class="input-sm in8" type="number" ng-model="$storage.settings.maxfactor" min="0"
				max="10" step=".2" />
		</label>
	</div>
	<label>
		Repeat:
		<input class="input-sm in8" type="number" ng-model="$storage.settings.repeat" min="1"
			max="10" step="1" />
	</label>

	<button class="btn btn-primary  btn-sm  navbar-btn " ng-click="toggleMode()"
		title="Click to toggle mode: File or Database">{{state.mode}}</button>

	<button class="factor btn btn-primary  btn-sm navbar-btn"
		ng-click="xmlgen(0.5)" title="Click to set size">{{state.factor}}/{{state.size}}
	</button>

	<button class="btn btn-primary" ng-click="executeAll()" title="Execute all queries">
		<i class="glyphicon glyphicon-forward"></i>
		Run All
	</button>
	</form>
	<button class="btn btn-primary" ng-click="go()" title="Execute all queries">
        <i class="glyphicon glyphicon-forward"></i>
        Go
    </button>
  
</div>