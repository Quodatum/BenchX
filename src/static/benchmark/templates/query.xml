<div>


	<div class="container-fluid">
		<button class="btn" ng-click="executeAll()">Run All</button>
		<button class="btn" ng-click="copyToClip()">copy</button>
		<button class="btn" ng-click="clearAll()">clear All</button>
		<div class="row">
			<div class="col-md-1" title="{{query.src}}">Queries...</div>
			<div class="col-md-1">

			</div>
			<div class="col-md-10">
				<button class="btn btn-primary  btn-sm  navbar-btn "
					ng-click="toggleMode()" title="Click to toggle mode: File or Database">{{state.mode}}</button>

				<button class="btn btn-primary  btn-sm navbar-btn" ng-click="xmlgen(0.5)"
					title="Click to set size">{{state.size}}</button>

			</div>
		</div>
		<div class="row" ng-repeat="query in queries">
			<div class="col-md-1" title="{{query.src}}">{{query.name}}</div>
			<div class="col-md-1">
				<button class="btn" ng-click="execute($index)">Run</button>
			</div>
			<div class="col-md-10">
				<div ng-repeat="run in query.runs" class="runtime"
					title="{{run.created}} {{run.mode}}">{{run.runtime}}ms</div>
			</div>
		</div>

	</div>
</div>