<div class="row ">
	<button class="btn" ng-click="executeAll()" title="Execute all queries">
		<i class="glyphicon glyphicon-forward"></i>
		Run All
	</button>
	<button class="btn btn-primary  btn-sm  navbar-btn " ng-click="toggleMode()"
		title="Click to toggle mode: File or Database">{{state.mode}}</button>

	<button class="factor btn btn-primary  btn-sm navbar-btn"
		ng-click="xmlgen(0.5)" title="Click to set size">{{state.factor}}/{{state.size}}</button>
	<label>
		Repeat:
		<input class="input-sm" type="number" ng-mode="repeat" />
	</label>
	<button class="btn" ng-click="clearAll()" title="Clear all data">
		<i class="glyphicon glyphicon-trash"></i>
		clear All
	</button>
	<button class="btn" ng-click="saveAs()" title="Download as csv">
		<i class="glyphicon glyphicon-save"></i>
		CSV
	</button>

	<a href="#/session?view=grid" class="btn  " ng-class="{'btn-primary':view!='grid'}">
		<i class="glyphicon glyphicon-th"></i>
		Grid
	</a>
	<a href="#/session?view=graph" class="btn " ng-class="{'btn-primary':view!='graph'}">
		<i class="glyphicon glyphicon-signal"></i>
		Graph
	</a>

</div>